{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/xa20959/xa20959.github.io/main/alldata.csv"
    },
    "height": 400,
    "width": 350,
    "title": {
      "text": ["Relationship between a country's Happiness Score and Proportion",
      "of their Population (over 25) with a Bachelor's degree"]},
    "layer": [
      {
        "mark": {
          "type": "point",
          "filled": true,
          "color":"mediumorchid"
        },
        "encoding": {
          "x": {
            "field": "happy",
            "type": "quantitative",
            "scale": {"domain": [2, 8]},
            "title": "Happiness Score"
          },
          "y": {
            "field": "degree25",
            "type": "quantitative",
            "title": "% of over 25s with a Bachelor's degree"
          },
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "happy", "type": "quantitative", "title": "World Happiness Score 2022"},
            {"field": "degree25", "type": "quantitative", "title": "% of population over 25 with a Bachelor's degree"}
          ]
        }
      },
      {
        "mark": {
          "type": "line",
          "color": "firebrick"
        },
        "transform": [
          {
            "regression": "degree25",
            "on": "happy"
          }
        ],
        "encoding": {
          "x": {
            "field": "happy",
            "type": "quantitative"
          },
          "y": {
            "field": "degree25",
            "type": "quantitative"
          }
        }
      },
      {
        "transform": [
          {
            "regression": "degree25",
            "on": "happy",
            "params": true
          },
          {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
        ],
        "mark": {
          "type": "text",
          "color": "firebrick",
          "x": "width",
          "align": "right",
          "y": -5
        },
        "encoding": {
          "text": {"type": "nominal", "field": "R2"}
        }
      }
    ]
  }